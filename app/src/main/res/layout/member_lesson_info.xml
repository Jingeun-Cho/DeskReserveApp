    <TextView
        android:id="@+id/member_lesson_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="레슨 정보"
        android:textColor="@color/black"
        android:padding="2dp"
        />
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:padding="5dp"
        android:paddingStart="30dp"
