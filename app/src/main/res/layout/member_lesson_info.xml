    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:padding="5dp"
        android:paddingStart="30dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="남은 이용기간 : "

            android:textColor="@color/black"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/text_membership_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21년 01월 01일 - 21년 12월 31일"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:padding="5dp"
        android:paddingStart="30dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="등록 레슨 횟수 : "

            android:textColor="@color/black"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/lesson_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000회"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:padding="5dp"
        android:paddingStart="30dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="총 진행 횟수 : "

            android:textColor="@color/black"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/lesson_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000회"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
