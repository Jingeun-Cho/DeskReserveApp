        <item name="colorControlNormal">@color/white</item> <!-- 일반 상태 색상 -->
<!--        <item name="android:textColorHighlight">@color/white</item> &lt;!&ndash; 텍스트 선택 색상 &ndash;&gt;-->
<!--        <item name="android:textSelectHandle"></item> &lt;!&ndash; 손잡이 색상 &ndash;&gt;-->
<!--        <item name="android:textCursorDrawable"></item> &lt;!&ndash; 커서 색상 &ndash;&gt;-->
        <item name="android:textColor">@color/white</item> <!-- 텍스트 색상 -->
    </style>
    <style name="HeaderTextDecoration">
        <item name="android:shadowColor">#4F4F4F</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
    </style>
</resources>